        <a class="p-1 rounded" style="text-decoration:none;" data-bs-toggle="collapse" href="#s_323" role="button" aria-expanded="false" aria-controls="s_323">
            <h3 style="margin-bottom:0px; padding-bottom:0px;">
                3/23/2022
            </h3>
            <span class="text-muted">Click for Available Time Slots</span>
        </a>
        <div class="collapse" id="s_323">
            @foreach (Time t in ViewBag.Times)
            {
                @if (t.Date == "3/23/2022")
                {
                    @if (t.Booked == false)
                    {
                        <a class="btn btn-primary m-1" asp-controller="Home" asp-action="Signup" asp-route-TimeID="@t.TimeID">@t.Date : @t.TimeValue</a>
                        <br />
                    }
                    else
                    {
                        <a class="btn btn-secondary m-1">@t.TimeValue</a>
                        <br />
                    }
                }
            }
        </div>
