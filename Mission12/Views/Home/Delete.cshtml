@{
    ViewData["Title"] = "Delete Movie";
}
@model Appointment

<h2>Confirm Deletion</h2>
<h3>Are you sure you want to delete the movie @Model.GroupName?</h3>

<form method="post" asp-controller="Home" asp-action="Delete">
    <button type="submit">Delete</button>
    <a asp-controller="Home" asp-action="ViewAll" class="btn btn-primary">Cancel</a>
    <input type="hidden" asp-for="AppointmentID" />
</form>