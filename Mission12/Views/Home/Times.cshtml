@{
    ViewData["Title"] = "Sign Up Page";
}

@model Time

<div class="text-center">
    <h1 class="display-4">Select a Time: </h1>
</div>

<div>

    <a class="p-1 rounded" style="text-decoration:none;" data-bs-toggle="collapse" href="#MyID" role="button" aria-expanded="false" aria-controls="MyID">
        <h3 style="margin-bottom:0px; padding-bottom:0px;">
            Testing this out
        </h3>
        <span class="text-muted">Click for more/less information</span>
    </a>
    <div class="collapse" id="MyID">
        <p>Here's a bunch of random test text to see if this collapsing card actually works</p>
    </div>


</div>


